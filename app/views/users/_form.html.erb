<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <table class="userCreation" width=300 height=100>
      <tr>
        <td>
          <div class="field">
            <%= f.label :username %><br>
            <%= f.text_field :username%>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.text_field :password %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label :prename %><br>
            <%= f.text_field :prename %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :lastname %><br>
            <%= f.text_field :lastname %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.text_field :email %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :mobile_number %><br>
            <%= f.number_field :mobile_number %>
          </div>
        </td>
      </tr>

      <tr>
        <td colspan="2">
          <div class="field">
            <%= f.label :info %><br>
            <%= f.text_area :info, :rows => 2, :cols => 60 %>
          </div>
        </td>
      </tr>

      <tr>
        <td></td>
        <td>
          <div class="field">
            <%= f.label :unit %><br>
            <%= f.collection_select :unit_id, Unit.all, :id, :name ,include_blank: "choose unit"%>
          </div>
        </td>

      </tr>


    </table>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>