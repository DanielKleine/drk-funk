<h1>Account erstellen:</h1>



<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname %>
    </p>
    <p>
      <%= f.label :prename %><br />
      <%= f.text_field :prename %>
    </p>



    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password_unhashed %>
    </p>
    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_unhashed_confirmation %>
    </p>
    <p class="button"><%= f.submit %></p>
<% end %>



<%= link_to 'Back', users_path %>
