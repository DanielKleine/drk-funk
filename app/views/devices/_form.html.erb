<%= form_for(@device) do |f| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% @device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :device_type %><br>
    <%= f.collection_select :device_type_id, DeviceType.all, :id, :name, {}, class: "form-control", :prompt => 'Select device type' %>
  </div>

  <div id="property">
  </div>

  <div class="form-group">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </div>

  <div class="form-group">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Stock.all, :id, :name, {}, class: "form-control", :prompt => 'Select owner stock' %>
  </div>

  <div class="form-group">
    <%= f.label :stock %><br>
    <%= f.collection_select :stock_id, Stock.all, :id, :name, {}, class: "form-control", :prompt => 'Select stock' %>
  </div>

  <div class="form-group">
    <%= f.label :ready %><br>
    <%= f.check_box :ready %>
  </div>



  <div class="actions">
    <a href="/users/"><button type="button" class = "btn btn-primary" >Back</button></a>
    <%= link_to 'Show', @device, class: "btn btn-info" %>
    <%= f.button :submit => "", class:'btn btn-success', style:"margin-left:230px;"%>
  </div>
<% end %>
